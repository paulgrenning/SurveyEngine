<div class="allSurveysArea">
  <% @surveys.each do |survey| %>
    <div> <%= survey.name %></div>
  <% end %>
</div>

<div class="submitArea">
      
<%= form_for(@survey) do |f| %>

    <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Create Survey" %>
  </div>
<% end %>
</div>
